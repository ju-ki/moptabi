{
  "name": "backend",
  "private": true,
  "scripts": {
    "dev": "bun run --hot src/dev.ts",
    "dev:wrangler": "wrangler dev src/index.ts",
    "build": "tsc",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts}\"",
    "test": "bun test",
    "test:report": "bun test --report=junit --reporter-outfile=./coverage/junit.xml",
    "test:coverage": "bun test --coverage",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit introspect",
    "db:studio": "drizzle-kit studio",
    "db:migrate:dev": "drizzle-kit migrate",
    "db:migrate:prod": "NODE_ENV=production drizzle-kit migrate",
    "db:push:test": "drizzle-kit push --config=./drizzle-test.config.ts",
    "db:push:staging": "drizzle-kit push --config=./drizzle-staging.config.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@auth/core": "^0.34.3",
    "@hono/auth-js": "^1.1.0",
    "@hono/node-server": "^1.14.1",
    "@hono/swagger-ui": "^0.5.1",
    "@hono/zod-openapi": "^0.19.2",
    "@neondatabase/serverless": "^1.0.2",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@prisma/extension-accelerate": "^3.0.1",
    "@types/bun": "^1.2.9",
    "@types/pg": "^8.16.0",
    "bun": "^1.2.9",
    "dotenv": "^17.2.4",
    "drizzle-kit": "0.30.5",
    "drizzle-orm": "0.44.0",
    "eslint": "^9.39.2",
    "hono": "^3.10.0",
    "pg": "^8.18.0",
    "prisma": "^7.3.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260124.0",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitest/coverage-v8": "^4.0.8",
    "dotenv-cli": "^11.0.0",
    "esbuild": "0.27.2",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^8.0.0",
    "prettier": "3.5.3",
    "tsx": "^4.21.0",
    "typescript-eslint": "^8.30.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.8",
    "vitest-mock-extended": "^3.1.0",
    "wrangler": "^4.60.0"
  }
}
