generator client {
  provider      = "prisma-client"
  output        = "../src/generated/prisma"
  engine = "client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trip {
  id        Int        @id @default(autoincrement())
  title     String     @db.VarChar(50)
  startDate String     @db.VarChar(10)
  endDate   String     @db.VarChar(10)
  userId    String     @db.VarChar(255)
  imageUrl  String?    @db.VarChar(255)
  plans     Plan[]
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  tripInfo  TripInfo[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TripInfo {
  id                    Int      @id @default(autoincrement())
  tripId                Int
  date                  String @db.VarChar(10)
  genreId               Int
  transportationMethods Int
  memo                  String?
  trip                  Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
}

model Plan {
  id            Int      @id @default(autoincrement())
  tripId        Int
  date          String @db.VarChar(10)
  trip          Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  planSpots   PlanSpot[]
  transports   Transport[]
}


model Spot {
  id         String     @id @db.VarChar(255)
  meta       SpotMeta?
  planSpots  PlanSpot[]
  nearestStations NearestStation[]
  wishlists       Wishlist[]
}

model PlanSpot {
  id         Int       @id @default(autoincrement())
  plan       Plan      @relation(fields: [planId], references: [id], onDelete: Cascade)
  planId     Int
  spot       Spot      @relation(fields: [spotId], references: [id], onDelete: Cascade)
  spotId     String
  stayStart  String @db.VarChar(5)
  stayEnd    String @db.VarChar(5)
  memo       String?
  order      Int @default(0)
  fromLocation Transport[] @relation("FromLocation")
  toLocation   Transport[] @relation("ToLocation")
}

model SpotMeta {
  id          String   @id @db.VarChar(255)
  spotId      String   @unique
  spot        Spot     @relation(fields: [spotId], references: [id])
  name        String   @db.VarChar(255)
  latitude     Float
  longitude    Float
  image        String?
  url          String?
  prefecture   String?   @db.VarChar(50)
  address      String?   @db.VarChar(255)
  rating       Float?
  categories   String[]
  catchphrase  String?
  description  String?
  openingHours Json?
}


enum TransportNodeType {
  DEPARTURE
  DESTINATION
  SPOT
}

model Transport {
  id                Int              @id @default(autoincrement())
  planId            Int
  fromType       TransportNodeType
  toType         TransportNodeType
  travelTime        String?
  cost              Int?
  fromSpotId    Int?
  toSpotId      Int?
  plan          Plan                @relation(fields: [planId], references: [id], onDelete: Cascade)
  fromLocation     PlanSpot?        @relation("FromLocation", fields: [fromSpotId], references: [id])
  toLocation       PlanSpot?        @relation("ToLocation", fields: [toSpotId], references: [id])
  transportMethod Int
}

model NearestStation {
  id          Int    @id @default(autoincrement())
  spotId      String?
  name        String @db.VarChar(255)
  walkingTime Int
  latitude    Float
  longitude   Float
  spot        Spot?   @relation(fields: [spotId], references: [id])
}

model Wishlist {
  id         Int       @id @default(autoincrement())
  spotId     String    @db.VarChar(255)
  userId     String    @db.VarChar(255)
  memo       String?
  priority   Int       @default(1)
  visited    Int       @default(0)
  visitedAt  DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  spot Spot @relation(fields: [spotId], references: [id], onDelete: Cascade)

  @@unique([userId, spotId])
}

enum NotificationType {
  SYSTEM
  INFO
}

model Notification {
  id           Int              @id @default(autoincrement())
  title        String           @db.VarChar(100)
  content      String
  type         NotificationType
  publishedAt  DateTime
  createdAt    DateTime         @default(now())

  userNotifications UserNotification[]
}

model UserNotification {
  id             Int       @id @default(autoincrement())
  userId         String    @db.VarChar(255)
  notificationId Int
  isRead         Boolean   @default(false)
  readAt         DateTime?
  createdAt      DateTime  @default(now())
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  notification Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade)

  @@unique([userId, notificationId])
}

model User {
  id                String             @id @db.VarChar(255)
  role         RoleType  @default(USER)
  trip              Trip[]
  wishlists         Wishlist[]
  userNotifications UserNotification[]
}

enum RoleType {
  ADMIN
  USER
  GUEST
}