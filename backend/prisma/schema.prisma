generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "darwin-arm64", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trip {
  id        Int        @id @default(autoincrement())
  title     String     @db.VarChar(50)
  startDate String     @db.VarChar(10)
  endDate   String     @db.VarChar(10)
  userId    String     @db.VarChar(255)
  imageUrl  String?    @db.VarChar(255)
  plans     Plan[]
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  tripInfo  TripInfo[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TripInfo {
  id                    Int      @id @default(autoincrement())
  tripId                Int
  date                  String @db.VarChar(10)
  genreId               Int
  transportationMethods Int[]
  memo                  String?
  trip                  Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
}

model Plan {
  id            Int      @id @default(autoincrement())
  tripId        Int
  date          String @db.VarChar(10)
  trip          Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  planSpots   PlanSpot[]
  transports   Transport[]
}


model Spot {
  id         String     @id @db.VarChar(255)
  meta       SpotMeta?
  planSpots  PlanSpot[]
  nearestStations NearestStation[]
  wishlists       Wishlist[]
}

model PlanSpot {
  id         Int       @id @default(autoincrement())
  plan       Plan      @relation(fields: [planId], references: [id], onDelete: Cascade)
  planId     Int
  spot       Spot      @relation(fields: [spotId], references: [id], onDelete: Cascade)
  spotId     String
  stayStart  String @db.VarChar(5)
  stayEnd    String @db.VarChar(5)
  memo       String?
  order      Int @default(0)
  fromLocation Transport[] @relation("FromLocation")
  toLocation   Transport[] @relation("ToLocation")
}

model SpotMeta {
  id          String   @id @db.VarChar(255)
  spotId      String   @unique
  spot        Spot     @relation(fields: [spotId], references: [id])
  name        String   @db.VarChar(255)
  latitude     Float
  longitude    Float
  image        String?
  rating       Float?
  categories   String[]
  catchphrase  String?
  description  String?
  openingHours Json?
}

model TransportMethod {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(50)
  transports TransportMethodOnTransport[]
}

model TransportMethodOnTransport {
  transportId      Int
  transportMethodId Int
  transport        Transport        @relation(fields: [transportId], references: [id], onDelete: Cascade)
  method           TransportMethod  @relation(fields: [transportMethodId], references: [id], onDelete: Cascade)

  @@id([transportId, transportMethodId])
}

enum TransportNodeType {
  DEPARTURE
  DESTINATION
  SPOT
}

model Transport {
  id                Int              @id @default(autoincrement())
  planId            Int
  fromType       TransportNodeType
  toType         TransportNodeType
  travelTime        String?
  cost              Int?
  fromSpotId    Int?
  toSpotId      Int?
  plan          Plan                @relation(fields: [planId], references: [id], onDelete: Cascade)
  fromLocation     PlanSpot?        @relation("FromLocation", fields: [fromSpotId], references: [id])
  toLocation       PlanSpot?        @relation("ToLocation", fields: [toSpotId], references: [id])
  transportMethods TransportMethodOnTransport[]
}

model NearestStation {
  id          Int    @id @default(autoincrement())
  spotId      String?
  name        String @db.VarChar(255)
  walkingTime Int
  latitude    Float
  longitude   Float
  spot        Spot?   @relation(fields: [spotId], references: [id])
}

model Wishlist {
  id         Int       @id @default(autoincrement())
  spotId     String    @db.VarChar(255)
  userId     String    @db.VarChar(255)
  memo       String?
  priority   Int       @default(1)
  visited    Int       @default(0)
  visitedAt  DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  spot Spot @relation(fields: [spotId], references: [id], onDelete: Cascade)

  @@unique([userId, spotId])
}


model User {
  id   String @id @db.VarChar(255)
  trip Trip[]
  wishlists Wishlist[]
}
