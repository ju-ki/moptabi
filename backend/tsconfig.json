{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"],
      "@db": ["./src/db/index.ts"],
      "@db/*": ["./src/db/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["src", "prisma.config.ts"],
  "exclude": ["node_modules", "dist"]
}